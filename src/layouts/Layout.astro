---
import Header from '../components/organisms/Header.svelte';
import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="color-scheme" content="light dark" />
		<meta name="robots" content="noindex,nofollow" />
		<title>{title}</title>
		<meta
			name="description"
			content="Vytvořte a rozsviťte si obrázky a lezecké cesty na boulderu."
		/>
		<meta name="generator" content={Astro.generator} />
		<!-- <script src="https://cdn.tailwindcss.com" defer></script> -->
		<ViewTransitions />
	</head>
	<body data-version="1.0.0" class="bg-white text-slate-900 dark:bg-slate-900 dark:text-slate-200">
		<Header currentPath={currentPath} client:load />
		<slot />
	</body>
</html>
